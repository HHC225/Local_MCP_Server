# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.env text eol=lf
.env.* text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf
LICENSE text eol=lf
AUTHORS text eol=lf
CHANGELOG text eol=lf
CONTRIBUTING text eol=lf
INSTALL text eol=lf
README text eol=lf

# Binary files
*.db binary
*.p binary
*.pkl binary
*.pickle binary
*.pyc binary export-ignore
*.pyo binary export-ignore
*.pyd binary

# Archives
*.7z binary
*.gz binary
*.tar binary
*.zip binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
__pycache__/ export-ignore
*.pyc export-ignore
