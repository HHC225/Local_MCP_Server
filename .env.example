# Environment variables for Thinking Tools MCP Server
# Copy this file to .env and customize as needed

# ============================================
# Server Configuration
# ============================================
MCP_SERVER_NAME="Thinking Tools MCP Server"
MCP_SERVER_VERSION="1.0.0"

# Transport Configuration
MCP_TRANSPORT="stdio"  # stdio, http, sse
MCP_HTTP_HOST="127.0.0.1"
MCP_HTTP_PORT="8000"
MCP_HTTP_PATH="/mcp"

# ============================================
# Logging Configuration
# ============================================
MCP_LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
# MCP_LOG_FILE="thinking_tools.log"  # Uncomment to enable file logging

# ============================================
# Feature Flags
# Enable/disable specific tools
# ============================================
ENABLE_Rcursive_Thinking_TOOLS="true"      # Recursive Thinking Model
ENABLE_ST_TOOLS="true"                     # Sequential Thinking
ENABLE_TOT_TOOLS="true"                    # Tree of Thoughts
ENABLE_CONVERSATION_MEMORY_TOOLS="true"    # Conversation Memory with ChromaDB
ENABLE_FUTURE_TOOL_1="false"               # Reserved for future tools
ENABLE_FUTURE_TOOL_2="false"               # Reserved for future tools

# ============================================
# Rcursive_Thinking Specific Configuration
# ============================================
Rcursive_Thinking_DEFAULT_LATENT_UPDATES="4"      # Number of latent reasoning steps (1-10)
Rcursive_Thinking_DEFAULT_MAX_IMPROVEMENTS="16"   # Maximum answer improvement iterations
Rcursive_Thinking_SESSION_TIMEOUT="3600"          # Session timeout in seconds (1 hour)

# ============================================
# Conversation Memory Configuration
# ============================================
CONVERSATION_MEMORY_DB_PATH="./chroma_db"         # ChromaDB storage path
CONVERSATION_MEMORY_DEFAULT_RESULTS="5"           # Default number of query results

# ============================================
# Authentication (Future Feature)
# ============================================
MCP_AUTH_ENABLED="false"
# MCP_AUTH_PROVIDER="google"  # google, github, azure, etc.

# ============================================
# Python Requirements
# ============================================
# Python Version: 3.12+ required
# FastMCP Version: 2.0+ required
# Package Manager: uv recommended (https://github.com/astral-sh/uv)
